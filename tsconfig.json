{
	"compilerOptions": {
		// MODULES
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"esModuleInterop": false,
		// STRUCTURE
		"outDir": "./dist",
		"rootDir": "./src",
		// EMISSIONS
		"declaration": true,
		"noEmitOnError": true,
		"noEmit": false, // Can be used when you want to emit only one build
		"allowSyntheticDefaultImports": true,
		"baseUrl": "src",
		"inlineSourceMap": false,
		"listFiles": false,
		"pretty": true,
		"skipLibCheck": true,
		"strict": true,
		"traceResolution": false,
		"types": ["node"]
	},
	"compileOnSave": false,
	"exclude": ["node_modules"],
	"include": ["src"]
}
